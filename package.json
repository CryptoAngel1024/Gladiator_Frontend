{
  "name": "gladiator-frontend",
  "version": "0.0.6",
  "private": "true",
  "scripts": {
    "dev": "vite",
    "dev:beta": "cross-env VITE_STAGE=dev vite",
    "dev:mock": "VITE_STAGE=mock vite",
    "lint": "eslint \"./**/*.?(js|vue)\"",
    "lint:style": "stylelint \"**/*.{vue,css}\" --ignore-path .gitignore",
    "lint:fix": "eslint --fix \"./src/**/*.?(js|vue)\" && npm run lint:style --fix && npm run prettier",
    "lint-staged": "lint-staged",
    "prettier": "prettier --write \"./src/**/*.?(js|vue|css|json)\"",
    "build": "vite build",
    "build:staging": "vite build --mode staging",
    "serve": "vite preview",
    "test:coverage": "jest tests --verbose --coverage --coverageReporters=\"json-summary\"",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:integration:leak": "jest tests/integration --runInBand --detectOpenHandles",
    "test:unit:watch": "jest tests/unit --watch",
    "test:integration:watch": "jest tests/integration --watch",
    "test": "jest tests/integration/views/dashboard/dashboardTemplates.spec.js --verbose",
    "test:full": "jest tests --verbose",
    "test:watch": "jest tests --watch",
    "test:watch:file": "jest --watch",
    "jest:clearCache": "jest --clearCache",
    "test:file": "jest"
  },
  "dependencies": {
    "@openid/appauth": "^1.3.1",
    "@tinymce/tinymce-vue": "^4.0.7",
    "aws-amplify": "^4.3.19",
    "dateformat": "^5.0.3",
    "file-saver": "^2.0.5",
    "json-to-csv-export": "^1.1.0",
    "lodash": "^4.17.21",
    "papaparse": "^5.3.2",
    "reveal.js": "^4.3.1",
    "reveal.js-plugins": "^4.1.5",
    "tinymce": "^5.10.3",
    "vue": "^3.2.31",
    "vue-draggable-next": "^2.1.1",
    "vue-gtag-next": "^1.14.0",
    "vue-router": "^4.0.14",
    "vue-router-mock": "^0.1.7",
    "vuex": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/node": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/vue": "^6.4.2",
    "@types/jest": "^27.4.1",
    "@vitejs/plugin-vue": "^2.3.1",
    "@vue/compiler-sfc": "^3.2.31",
    "@vue/test-utils": "^2.0.0-rc.19",
    "@vue/vue3-jest": "^27.0.0",
    "autoprefixer": "^10.4.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^27.4.2",
    "babel-plugin-transform-import-meta": "^2.1.1",
    "babel-preset-vite": "^1.0.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-sonarjs": "^0.13.0",
    "eslint-plugin-vue": "^8.6.0",
    "jest": "^27.4.3",
    "jsdom": "^19.0.0",
    "lint-staged": "^12.3.7",
    "postcss": "^8.4.12",
    "postcss-html": "^1.2.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.6.2",
    "stylelint": "^14.6.1",
    "stylelint-config-recommended": "^6.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "tailwindcss": "^3.0.23",
    "ts-jest": "^27.1.4",
    "vite": "^2.8.6",
    "vite-plugin-pwa": "^0.12.0",
    "vite-plugin-svg-icons": "^1.1.0"
  },
  "precommit": "lint-staged",
  "lint-staged": {
    "*.{css,vue}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": "prettier --write"
  }
}
